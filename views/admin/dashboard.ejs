<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Admin Dashboard</h1>
  <a href="/admin/create">➕ Add New Project</a>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (projects && projects.length > 0) { projects.forEach(project => { %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td>
            <% if (project.image_url) { %>
              <img src="<%= project.image_url %>" width="100">
            <% } else { %>
              No image
            <% } %>
          </td>
          <td>
            <a href="/admin/edit/<%= project.id %>">✏️ Edit</a>
            <form action="/admin/delete/<%= project.id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Delete this project?')">🗑️ Delete</button>
            </form>
          </td>
        </tr>
      <% }); } else { %>
        <tr>
          <td colspan="4">No projects available</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>
